#!/bin/bash

set -e

NAME=$1
IMG=$2

USER=$(id -un)
GID=$(id -g)
GROUP=$(id -gn)

# --privileged needed for dmidecode
docker run --privileged -d -v /tmp:/tmp -v "/home/$USER:/home/$USER" -h "$NAME" --name "$NAME" "$IMG" init

docExe() {
  local cmd=$1

  docker exec "$NAME" /bin/bash -c "$cmd"
}

docExe "groupadd -g $GID $GROUP && useradd -M -s /bin/bash -g $GID -u $UID $USER" &
docExe "printf '$USER ALL=(ALL) NOPASSWD: ALL\n' >> /etc/sudoers" &

